{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Platform Monitor Web",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/PlatformMonitor/bin/Debug/net8.0/PlatformMonitor.dll",
            "args": [],
            "cwd": "${workspaceFolder}/PlatformMonitor",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "Now listening on: (https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/PlatformMonitor/Views"
            }
        }
    ]
}
